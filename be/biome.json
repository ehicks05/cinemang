{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "warn" }
		}
	},
	"formatter": {
		"lineWidth": 85
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"files": {
		"include": ["./src/**/*.*"],
		"ignore": ["./src/app/components/SearchForm.tsx"]
	}
}
